{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "dev",
			"label": "vite start",
			"detail": "vite",
			"isBackground": true,
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"line": 1,
						"column": 1,
						"message": 1
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "."
					},
					"endsPattern": {
						"regexp": "^.*$"
					}
				}
			}
		},
		{
			"label": "terminate vite",
			"command": "${input:terminate}",
			"type": "shell",
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "vite start"
		}
	]
}
